<div class='articles'>
  <% if session[:user_id] %>
    <%= link_to "New Article", new_article_path %>
  <% end %>
  <% if @recent_articles %>
  <h2>Recent Articles</h2>
    <% recent_articles.each do |article| %>
      <%= link_to "#{article.title}", article_path(article)%><br>
        <div class='content_preview'><%= article.content_preview %></div>
    <%end%>

  <% else %>
  <h2>All Articles</h2>
    <% articles.each do |article| %>
      <%= link_to "#{article.title}", article_path(article)%><br>
        <div class='content_preview'><%= article.content_preview %></div>
    <%end%>

  <% end %>

  <% if @popular_articles %>

  <h2>Popular Articles</h2>
    <% popular_articles.each do |article| %>
      <%= link_to "#{article.title}", article_path(article)%><br>
        <div class='content_preview'><%= article.content_preview %></div>
    <%end%>
  <% end %>

</div>